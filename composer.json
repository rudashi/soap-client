{
    "name": "rudashi/soap-client",
    "description": "A fluent SOAP client for PHP",
    "version": "1.0.0",
    "require": {
        "php": "^8.2",
        "ext-soap": "*"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Rudashi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "pest --testsuite=unit",
        "test:mutate": "pest --mutate",
        "test:coverage": "pest --coverage",
        "test:pint": "php-cs-fixer check --allow-risky=yes -vvv",
        "test": [
            "@test:pint",
            "@test:unit",
            "@test:mutate"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": true
    }
}